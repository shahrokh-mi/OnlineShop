@using OnlineShop.Service.Models
@model ProductModel

 <div class="col-md-4 col-xs-6 border-primary mb-3">
    <div class="card mb-3" style="max-width: 540px;">
        <div class="row g-0">
            <div class="col-md-12 imgContainer">
                <img src="@FileHelper.RetrivePictureFromFolder@Model.Picture" asp-append-version="true" />
            </div>
            <div class="col-md-12">
                <div class="card-header text-white bg-info">
                    <p class="card-text">
                        <h5 class="card-title">
                            @Model.Title
                        </h5>
                    </p>
                </div>
            </div>
            <div class="col-md-12">
                <div class="card-footer ">
                    <p class="card-text">
                        <a class="btn btn-outline-primary float-right" asp-action="Details" asp-route-id="@Model.Id">
                            <i class="bi bi-eye-fill"></i> Show Details
                        </a>
                        <a class="btn btn-success text-white " 
                           asp-controller="Orders" 
                           asp-action="AddItemToShoppingCart" 
                           asp-route-id="@Model.Id">
                        <i class="bi bi-cart-plus"></i> Add to Cart (Price @Model.Price.ToString("c"))</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>