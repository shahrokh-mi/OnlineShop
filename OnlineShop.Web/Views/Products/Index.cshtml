@using OnlineShop.Service.Models
@model IEnumerable<ProductModel>

<br />
<br />

<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1>
                Products List
            </h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="create" class="btn btn-outline-primary">
                <i class="   fa-plus"></i> Create New Product
            </a>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Title
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Picture
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Title
                        </td>
                        <td>
                            @item.PriceTitle
                        </td>
                        <td>
                            @if (@item.Picture != null)
                                {
                                    <img src="@FileHelper.RetrivePictureFromFolder@item.Picture" class="img-thumbnail" height="80" width="80" asp-append-version="true" />
                                }
                        </td>
                        <td>
                            <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.Id"> <i class="fas fa-edit"></i></a>
                            <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id"> <i class="fas fa-trash"></i></a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
